<div class="container p-4">
    <div class="row">
        <div class="col align-self-center">
            <div class=" card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{Productos.ID_Productos}}" method="post">
                        <div class="input-group mt-2">
                            <label for="Descripcion" class="input-group-text">Articulo</label>
                            <input class="form-control" type="text" name="Descripcion" id="Descripcion" value="{{Productos.Descripcion}}" placeholder="Descripcion: Recogedor" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Precio" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" step=".01" name="Precio" id="Precio" value="{{Productos.Precio}}" placeholder="Precio: 0.00"  required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Cantidad" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="Cantidad" id="Cantidad" value="{{Productos.Cantidad}}" placeholder="Cantidad" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Stock_Min" class="input-group-text">Stock_Min</label>
                            <input class="form-control" type="number" name="Stock_Min" id="Stock_Min" value="{{Productos.Stock_Min}}" placeholder="Stock_Min" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="Stock_Max" class="input-group-text">Stock_Max</label>
                            <input class="form-control" type="number" name="Stock_Max" id="Stock_Max" value="{{Productos.Stock_Max}}" placeholder="Stock_Max" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="ID_CategoriaProducto" class="input-group-text">Categoria</label>
                            <select class="form-select" name="ID_CategoriaProducto" id="ID_CategoriaProducto" required>
                                        <option value="{{Categoria.ID_CategoriaProducto}}" selected>{{Categoria.Descripcion}}</option>
                                {{#each Categorias}}
                                        <option value="{{this.ID_CategoriaProducto}}">{{this.Descripcion}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Editar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
